Sub Putname(colsnum As Long, rownum As Long, resource As String, w As Integer)
Dim rownum1 As Long
Dim colsnum1 As Long
Dim ispace As String
Dim x As Integer
ispace = "FALSE"
x = 1

While ispace <> "TRUE"
    If Worksheets("Reference").Cells(x, 11) <> "" Then
       x = x + 1
    Else
       ispace = "TRUE"
       w = Worksheets("Reference").Cells(x - 1, 12).Value
    End If
    
Wend

y = x
x = 2
Z = 4

If colsnum = 3 Then
    colsnum1 = colsnum - 2
    rownum1 = rownum + 2
    
    For rownum1 = rownum1 To rownum1 + w - 1
       
        Select Case rownum1
            Case rownum1, rownum1 + w * 2, rownum1 + w * 3
                If Worksheets("Reference").Cells(x, 11) <> "" Then
                    resource = Worksheets("Reference").Cells(x, 11).Value
                    x = x + 1
                End If
            
        End Select
    
        With Cells(rownum1, colsnum1)
            .Value = resource
            .Interior.ColorIndex = 16
            .Font.Bold = True
            .Borders.LineStyle = xlContinuous
            .Borders.Color = vbBlack
            .Borders.Weight = xlHairline
            .EntireColumn.AutoFit
        End With
            
    Next rownum1
    
Else: Exit Sub
End If
End Sub


