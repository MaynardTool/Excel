Sub PutBorder(colstring, rownum, w)
Dim i As Integer

For i = 0 To w + 1
 With Range(colstring & (rownum + i))
    .Borders.LineStyle = xlContinuous
    .Borders.Color = vbBlack
    .Borders.Weight = xlHairline
    .Interior.ColorIndex = 15
 End With
 Next i
End Sub

